<!DOCTYPE html>
<html>
  
<head>
    <title>User Management System</title>
</head>
<style>
    h1 {text-align: center;}
    body {background-color: rgb(105, 222, 237);}
    
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }
  
    td,
    th {
        border: 4px solid #ffffff;
        text-align: left;
        padding: 10px;
    }
  
    tr:nth-child(even) {
        background-color: #dddddd;
    }
    .button {
        background-color: rgb(8, 211, 8);
        padding-left: 15px;
        padding-right: 15px;
        cursor: pointer;
        font-size: 16px;
    }
    .button1 {
        background-color: rgb(255, 56, 56);
        cursor: pointer;
    }
    .button2 {
        background-color: orange;
        cursor: pointer;
    }
</style>
  
<body>
    <h1>User Management System</h1>
    <h2>User Details</h2>
    <table>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Age</th>
        </tr>
        <% data.forEach(element=> { %>
            <tr>
                <td>
                    <%= element.userUniqueId %>
                </td>
                <td>
                    <%= element.userName %>
                </td>
                <td>
                    <%= element.userEmail %>
                </td>
                <td>
                    <%= element.userAge %>
                </td>
            </tr>
        <% }) %>
        
    </table>

    <h2>Add User</h2>

<form action="/" method="post">
       <input type="text" placeholder="User
         Unique Id" name="userUniqueId">
       <input type="text" placeholder="User Name" 
           name="userName">
       <input type="text" placeholder="User Email"
            name="userEmail">
       <input type="text" placeholder="User Age"
            name="userAge">
       <!-- <button type="submit">Submit</button> -->
       <button class="button">submit</button>
 </form>

 <table>
    <tr>
      <th>User Id</th>
      <th>User Name</th>
      <th>User Email</th>
      <th>Age</th>
      <th>Delete</th>
    </tr>
    <% data.forEach(element => { %>
    <tr>
      <td><%= element.userUniqueId %></td>
      <td><%= element.userName %></td>
      <td><%= element.userEmail %></td>
      <td><%= element.userAge %></td>
      <td>
            <form action="/delete" method="post">
              <input type="text" style="display: none;" 
                 name="userUniqueId" 
                 value="<%= element.userUniqueId %>">
              <!-- <button type="submit">Delete</button> -->
              <button class="button1">Delete</button>
            </form>
      </td>
    </tr>
    <% }) %>
</table>

<h2>Update User</h2>

<form action="update" method="post">
       <input type="text" placeholder="User Unique Id"
        name="userUniqueId">
       <input type="text" placeholder="User Name" 
           name="userName">
       <input type="text" placeholder="User Email" 
           name="userEmail">
       <input type="text" placeholder="User Age" 
           name="userAge">
       <!-- <button type="submit">Update</button> -->
       <button class="button2">Update</button>
</form>
</body>
 
</html>